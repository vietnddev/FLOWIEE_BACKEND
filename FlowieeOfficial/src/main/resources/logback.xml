<configuration>
    <!-- Appender để ghi log ra file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/flowiee-%d{yyyy-MM-dd}.log</fileNamePattern> <!-- Mẫu tên file log theo ngày -->
            <maxHistory>30</maxHistory> <!-- Số lượng file log cũ để giữ lại -->
        </rollingPolicy>
        <encoder>
            <Pattern>%d %p %C{1.} [%t]: %m%n</Pattern>
        </encoder>
    </appender>

    <!-- Appender để ghi log ra console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d %p %C{1.} [%t]: %m%n</Pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="info">
        <appender-ref ref="FILE"/> <!-- Sử dụng appender FILE để ghi log -->
        <appender-ref ref="CONSOLE"/> <!-- Sử dụng appender CONSOLE để in log ra console -->
    </root>
</configuration>
